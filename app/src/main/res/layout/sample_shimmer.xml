<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/spacing_x16"
    android:paddingVertical="@dimen/spacing_x16"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.ui.shimmer.UiShimmer
        android:id="@+id/icon1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:ui_layout="@layout/horizontal_shimmer_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.example.ui.shimmer.UiShimmer
        android:id="@+id/amount1"
        android:layout_width="120dp"
        android:layout_height="8dp"
        android:layout_marginHorizontal="@dimen/spacing_x16"
        app:ui_layout="@layout/horizontal_shimmer_layout"
        app:layout_constraintStart_toEndOf="@+id/icon1"
        app:layout_constraintTop_toTopOf="@+id/icon1"
        app:layout_constraintBottom_toBottomOf="@+id/icon1"/>

    <com.example.ui.shimmer.UiShimmer
        android:id="@+id/status1"
        android:layout_width="80dp"
        android:layout_height="8dp"
        app:ui_layout="@layout/horizontal_shimmer_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon1"
        app:layout_constraintBottom_toBottomOf="@+id/icon1"/>

    <com.example.ui.shimmer.UiShimmer
        android:id="@+id/expiry1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/spacing_x16"
        app:ui_layout="@layout/horizontal_shimmer_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon1"/>


</androidx.constraintlayout.widget.ConstraintLayout>