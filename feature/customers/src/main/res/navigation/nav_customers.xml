<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_customers"
    app:startDestination="@id/customerListFragment">

    <fragment
        android:id="@+id/customerListFragment"
        android:name="com.nutapos.nutatest.feature.customers.list.CustomerListFragment"
        android:label="CustomerListFragment"
        tools:layout="@layout/fragment_customer_list" >
        <action
            android:id="@+id/action_customerListFragment_to_customerFormFragment"
            app:destination="@id/customerFormFragment" />
    </fragment>

    <fragment
        android:id="@+id/customerFormFragment"
        android:name="com.nutapos.nutatest.feature.customers.form.CustomerFormFragment"
        android:label="CustomerFormFragment"
        tools:layout="@layout/fragment_customer_form">
        <argument
            android:name="customerId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

</navigation>
